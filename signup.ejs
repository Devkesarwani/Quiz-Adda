<%- include('partials/header') %>

    <form action="/signup" method="post" autocomplete="off">
        <main class="container" style="margin-top: 40px; margin-bottom: 40px; padding-left: 20px; padding-right: 20px; width: 500px;">
            <div class="bg-light p-5 rounded shadow-lg p-3 mb-5 bg-body rounded">

                <h2 style="display: inline-block;">Welcome to</h2>
                <h2 style="display: inline-block; color: darkmagenta; margin: 0; padding-left: 3px;">Quiz Adda</h2>
                <br>

                <h4 class="h4 mb-3 fw-normal text-muted">Please sign up</h4>

                <div class="form-floating" style="padding-bottom: 4px;">
                    <input type="text" class="form-control" name="userName" placeholder="Enter name" required>
                    <label for="floatingInput">User Name</label>
                </div>

                <div class="form-floating" style="padding-bottom: 4px;">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="userEmail" autocomplete="off" required>
                    <label for="floatingInput">Email address</label>
                </div>

                <div class="form-floating" style="padding-bottom: 4px;">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="userPassword" required>
                    <label for="floatingPassword">Password</label>
                </div>

                <br>
                <button class="w-100 btn btn-lg btn-info" type="submit" style="color: white;"><b>Sign up to Quiz Adda</b></button>
                <div class="text" style="padding-top: 4px;">
                    <p>Already have a account?&nbsp;<a href="/login" style="color: darkmagenta;">login</a></p>
                </div>
            </div>

        </main>
    </form>

    <%- include('partials/footer') %>